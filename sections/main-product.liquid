<div class="container my-5">
    <div class="row mb-5">
        <div class="col-md-7">
            <div class="featured-image-primary mb-4">
                <a href="{{ product.featured_image | img_url: 'master' }}" data-lightbox="product" data-title="{{ product.title }}" ><img src="{{ product.featured_image | img_url: 'master' }}" class="w-100" alt=""></a>
            </div><!-- /featured-image-primary -->
            <div class="featured-image-secondary">
                <div class="row">
                    {% for image in product.images offset: 1 %}
                        <div class="col-12 col-sm-6 col-md-3 mb-4">
                            <a href="{{ image | img_url: 'master' }}" data-lightbox="product" data-title="{{ product.title }}" ><img src="{{ image | img_url: 'master' }}" class="w-100" alt=""></a>
                        </div>
                    {% endfor %}
                </div><!-- /row -->
            </div><!-- /featured-image-secondary -->
        </div><!-- /col -->
        <div class="col-md-5">
            <div class="badge badge-pill bg-info text-white">{{ product.vendor }}</div>
            <strong><h2 class="my-4">{{ product.title }}</h2></strong>
            {% if product.compare_at_price != blank %}
                <p>Precio Normal: <del class="text-muted">{{ product.compare_at_price | money_with_currency }}</del> </p>
            {% endif %}
            <p>{% if product.compare_at_price != blank %}Offer: {% else %} Price: {% endif %} <strong>{{ product.price | money_with_currency }}</strong> </p>
            {% form 'product', product %}
                <div class="quantity-product">
                    
                    {% if product.variants.size > 1 %}
                        <p>Variants:</p>
                        <select name="id" id="" class="form-control mb-1">
                            {% for variant in product.variants %}
                                <option value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %}>{{ variant.title }} - {{ variant.price | money_with_currency }}</option>
                            {% endfor %}
                        </select>
                    {% else %}
                        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {% endif %}

                    <div class="input-group mt-4" style="max-width: 200px;">
                        <button type="button" class="btn btn-secondary form-control btn-decrease">-</button>
                        <input type="text" name="quantity" value="1" class="form-control input-group-text quantity">
                        <button type="button" class="btn btn-secondary form-control btn-increase">+</button>
                    </div>
                    <div class="product-ctas mt-1">
                        <input type="submit" class="btn btn-primary w-100 mt-4 mb-3 text-dark" value="Add to Cart">
                        {{ form | payment_button }}
                    </div>
                </div>
            {% endform %}
            <div class="description mt-4">
                <p>{{ product.description }}</p>
            </div>
        </div><!-- /col -->

        <div class="col-md-6 col-lg-5">
        <h5 class="mt-5">Comparte este producto</h5>
            <ul class="share-buttons d-flex">
                <li><a href="https://www.facebook.com/share.php?u={{ canonical_url }}" title="Share on Facebook" target="_blank" class="badge badge-pill bg-info text-white mx-2 text-dark"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16"><path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/></svg></a></li>
