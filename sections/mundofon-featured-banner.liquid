{% schema %}
{
    "name": "Featured Banner",
    "tag": "section",
    "settings": [
        {
            "type": "header",
            "content": "Estilos de banner"
        },
        {
            "type": "select",
            "id": "banner_bg",
            "label": "Fondo del banner",
            "options": [
                {
                    "value": "bg-info",
                    "label": "Info"
                },
                {
                    "value": "bg-primary",
                    "label": "Primary"
                },
                {
                    "value": "bg-secondary",
                    "label": "Secondary"
                }
            ],
            "default": "bg-info"
        },
        {
            "type": "select",
            "id": "banner_main_title_color",
            "label": "Color del titulo principal",
            "options": [
                {
                    "value": "text-warning",
                    "label": "Warning"
                },
                {
                    "value": "text-danger",
                    "label": "Danger"
                },
                {
                    "value": "text-info",
                    "label": "Info"
                },
                {
                    "value": "text-dark",
                    "label": "Dark"
                },
                {
                    "value": "text-primary",
                    "label": "Primary"
                },
                {
                    "value": "text-secondary",
                    "label": "Secondary"
                }
            ],
            "default": "text-warning"
        },
        {
            "type": "select",
            "id": "banner_description_color",
            "label": "Color de la descripción",
            "options": [
                {
                    "value": "text-dark",
                    "label": "Dark"
                },
                {
                    "value": "text-white",
                    "label": "Light"
                }
            ],
            "default": "text-dark"
        },
        {
            "type": "select",
            "id": "banner_btn_color",
            "label": "Color del botón",
            "options": [
                {
                    "value": "btn-primary",
                    "label": "Primary"
                },
                {
                    "value": "btn-secondary",
                    "label": "Secondary"
                },
                {
                    "value": "btn-info",
                    "label": "Info"
                }
            ],
            "default": "btn-secondary"
        }
    ],
    "blocks": [
        {
            "name": "Text",
            "type": "banner_text",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "banner_main_title",
                    "label": "Titulo principal",
                    "default": "Lo más nuevo!"
                },
                {
                    "type": "textarea",
                    "id": "banner_description",
                    "label": "Descripción",
                    "default": "Aquí encontrarás consolas más potentes del momento."
                },
                {
                    "type": "text",
                    "id": "banner_btn_text",
                    "label": "Texto del botón",
                    "default": "Click aquí!"
                },
                {
                    "type": "url",
                    "id": "banner_btn_url",
                    "label": "Enlace"
                }
            ]
        },
        {
            "name": "Image",
            "type": "banner_img",
            "limit": 1,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "banner_img",
                    "label": "Imagen"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured Banner"
        }
    ]
}
{% endschema %}