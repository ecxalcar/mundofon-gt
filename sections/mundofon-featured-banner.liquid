<div class="featured-banner my-5">
    <div class="container">
        <div class="featured-banner-wrapper p-4 p-md-5 {{ section.settings.banner_bg }}">
            <div class="row">
                {% for block in section.blocks %}
                    {% if block.type == 'banner_text' %}
                        <div class="col-md-7 col-lg-8 d-flex align-items-center">
                            <div class="description mb-4 mb-md-0">
                                <h2 class="{{ section.settings.banner_main_title_color }}"><strong>{{ block.settings.banner_main_title }}</strong></h2>
                                <h3 class="{{ section.settings.banner_description_color }} mb-4">{{ block.settings.banner_description }}</h3>
                                <a href="{{ block.settings.banner_btn_url }}" class="btn {{ section.settings.banner_btn_color }} px-5 py-3">{{ block.settings.banner_btn_text }}</a>
                            </div><!--/.description-->
                        </div><!--/.col-->
                    {% elsif block.type == 'banner_img' %}
                        <div class="col-md-5 col-lg-4">
                            <div class="img">
                                {% if block.settings.banner_img %}
                                    {{ block.settings.banner_img | img_url: 'master' | img_tag: '','d-block w-100' }}
                                {% else %}
                                    {{ 'img-banner.png' | asset_url | img_tag: '','d-block w-100' }}
                                {% endif %}
                            </div><!-- /img -->
                        </div><!-- /col -->
                    {% endif %}
                {% else %}
                    <div class="col-md-7 col-lg-8 d-flex align-items-center">
                        <div class="description mb-4 mb-md-0">
                            <h2 class="text-warning"><strong>Lo más nuevo!</strong></h2>
                            <h3 class="text-white mb-4">Aquí encontrarás consolas más potentes del momento.</h3>
                            <a href="#0" class="btn btn-secondary px-5 py-3">Comprar ahora</a>
                        </div><!--/.description-->
                    </div><!--/.col-->
                    <div class="col-md-5 col-lg-4">
                        <div class="img">
                            {{ 'img-banner.png' | asset_url | img_tag: '','d-block w-100' }}
                        </div><!-- /img -->
                    </div><!-- /col -->
                {% endfor %}
            </div><!-- /row -->
        </div><!-- /featured-banner-wrapper -->
    </div><!-- /container -->
</div><!--/.featured-banner-->

