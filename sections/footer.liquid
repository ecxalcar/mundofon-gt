{% schema %}
{
	"name": "Footer",
	"class": "footer-store",
	"blocks": [
		{
			"name":	"Logo and Social Media",
			"type": "logo_social_media_footer",
			"limit": 1,
			"settings": [
				{
					"type": "image_picker",
					"id": "logo_footer",
					"label": "Logo de la tienda"
				},
				{
					"type": "text",
					"id": "social_media_title",
					"label": "Titulo de Redes Sociales",
					"default": "Síguenos en:"
				},
				{
                    "type": "paragraph",
                    "content": "Agrega enlaces de tus redes sociales en 'Configuración del tema' "
                }
			]
		},
		{
			"name":	"Footer Menu",
			"type": "menu_footer",
			"settings": [
				{
					"type": "text",
					"id": "heading_menu",
					"label" : "Heading Menu",
					"default": "Menu Title"
				},
				{
					"type": "link_list",
					"id": "menu",
					"label" : "Menu",
					"default": "main-menu"
				}
			]
		},
		{
			"name": "Subscribe Form",
			"type": "subscribe_form_footer",
			"limit": 1,
			"settings": [
				{
					"type": "checkbox",
					"id": "show_subscribe_form",
					"label": "Mostrar Formulario de Suscripción?",
					"default": true
				},
				{
					"type": "text",
					"id": "show_subscribe_form_title",
					"label": "Título del Formulario",
					"default": "Conoce productos y ofertas."
				}
			]
		}
	]
}
{% endschema %}